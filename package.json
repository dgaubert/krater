{
  "name": "krater",
  "version": "0.5.0",
  "description": "Abstract router middleware for koa",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dgaubert/krater.git"
  },
  "scripts": {
    "build": "babel src -d lib --source-maps inline",
    "build:watch": "npm run build -- --watch",
    "coverage": "nyc --reporter=lcov npm test",
    "lint": "standard \"src/**/*.js\" \"test/**/*.js\"",
    "postversion": "git push && git push --tags",
    "prepublish": "npm run build",
    "pretest": "npm run lint",
    "preversion": "npm test",
    "test": "NODE_ENV=test mocha --recursive -r babel-register -r source-map-support/register test",
    "test:watch": "npm run test -- -w"
  },
  "keywords": [
    "koa",
    "middleware",
    "inheritance"
  ],
  "author": "Daniel Garc√≠a Aubert <danielgarciaaubert@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "koa-compose": "^4.0.0",
    "path-to-regexp": "^1.7.0"
  },
  "engines": {
    "node": ">=7.6.0"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.24.1",
    "koa": "^2.3.0",
    "mocha": "^3.4.2",
    "node-fetch": "^1.7.1",
    "nyc": "^11.0.3",
    "source-map-support": "^0.4.15",
    "standard": "^10.0.2"
  },
  "standard": {
    "env": {
      "mocha": true
    }
  }
}
